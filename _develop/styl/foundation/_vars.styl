// ==================================================
// Variables
//
// 1. Colors
// 2. Spaces
// 3. Media Queries
// 4. Typography
// ==================================================


//
// 1. Colors
// --------------------------------------------------
// grays
// --------------------------------------------------
$gray-white = #fefefe
$gray = #95989a
$gray-dark = #333333
$gray-shadow = #eeeeee

// pallets
// --------------------------------------------------
$color-primary = #f6b4d2
$color-palette-magenta = #ff3289
$color-palette-cyan = #48c1f3
$color-palette-yellow = #e6d350
$color-default = $gray-dark
$color-link = blue


//
// 2. Spaces
// --------------------------------------------------
$space = 1.6rem										// 1.6rem
$space-xs = $space / 4						// 0.4rem
$space-sm = $space / 2						// 0.8rem
$space-md = $space + $space-sm		// 2.4rem
$space-lg = $space * 2						// 3.2rem
$space-mlg = $space * 2 + $space	// 4.8rem
$space-xlg = $space * 4						// 6.4rem


//
// 3. Media Queries
// --------------------------------------------------
$screen-xs = 520px		// Extra small screen / phone
$screen-sm = 868px		// Small screen / tablet
$screen-md = 992px		// Medium screen / desktop
$screen-lg = 1200px		// Large screen / wide desktop
$screen-xlg = 1400px	// Extra Large screen / wide desktop
$screen-xxlg = 1900px	// Extra Large screen / wide desktop


//
// 4. Typography
// --------------------------------------------------
$font-xxlg = 4rem
$font-xlg = 2rem
$font-lg = 1.6rem
$font-md = 1.4rem
$font-sm = 1.2rem
$font-xs = 1rem
